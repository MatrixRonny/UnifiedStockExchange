{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Error"
    },
    "File": {
      "Path": "app.log",
      "Append": true,
      "MinLevel": "Debug",          // min level for the file logger
      "FileSizeLimitBytes": 100000, // use to activate rolling file behaviour
      "MaxRollingFiles": 0          // use to specify max number of log files
    }
  }
}
